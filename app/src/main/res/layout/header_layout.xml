<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimary">

    <TextView
    android:id="@+id/tv_worldcamp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_days_togo"
    android:text="@string/app_name"
    android:textColor="@color/white"
    android:layout_centerHorizontal="true"
    android:textSize="@dimen/testsize_mid"
    android:textStyle="bold"
        />

    <TextView
    android:id="@+id/tv_days_togo"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:textColor="@color/white"
    android:layout_centerHorizontal="true"
    android:textSize="@dimen/testsize_max"
    android:text="2 days to go"
    android:gravity="center"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/tv_worldcamp_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_worldcamp"
    android:text="@string/title_header_date"
    android:textColor="@color/white"
    android:layout_centerHorizontal="true"
    android:textSize="@dimen/testsize_mid"/>

