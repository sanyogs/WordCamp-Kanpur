<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/schedulelist_bg">



    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:text="name"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/testsize_mid"/>

    <TextView
        android:id="@+id/tv_notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phone"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor"
        android:layout_below="@+id/tv_notification_title"
        android:textSize="@dimen/testsize_mid"/>

  <TextView
        android:id="@+id/tv_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor"
        android:layout_below="@+id/tv_notification_message"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/testsize_min"/>


</RelativeLayout>