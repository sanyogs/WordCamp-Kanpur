<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_schedulerow_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/schedulelist_bg">


        <TextView
            android:id="@+id/tv_time_multiple_Session"
            android:layout_width="match_parent"
            android:background="@color/schedulelist_textbg"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="visible"
            android:layout_height="30dp"/>


        <RelativeLayout
            android:layout_below="@+id/tv_time_multiple_Session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp">

        <LinearLayout
            android:id="@+id/ll_datetime"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:minHeight="80dp"
            android:layout_margin="10dp"
            android:background="@color/schedulelist_textbg"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_custom_schedule_month"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="11"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/testsize_mid"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_custom_schedule_date"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="11"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/testsize_mid"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_custom_schedule_day"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="11"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/testsize_mid"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_custom_schedule_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="@dimen/testsize_mid"
                android:maxLines="2"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_sc_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/ll_datetime"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_custom_schedule_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/testsize_mid"
                android:maxLines="4"
                android:textColor="@color/textcolor"
                android:text=""/>

            <TextView
                android:id="@+id/tv_custom_schedule_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/testsize_mid"
                android:textColor="@color/textcolor"
                android:maxLines="4"
                android:text="Speaker"
                android:lines="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="100dp"/>

            <TextView
                android:id="@+id/tv_custom_schedule_speakername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/testsize_mid"
                android:textColor="@color/textcolor"
                android:maxLines="4"
                android:text="Speaker name"
                android:textStyle="bold"
                android:layout_marginRight="100dp"
                android:lines="1"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@color/blue"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="Attend"
            android:textSize="@dimen/testsize_mid"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center"/>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>